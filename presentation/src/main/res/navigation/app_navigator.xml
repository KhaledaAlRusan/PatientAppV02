<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_app"
    app:startDestination="@id/patientFragment">

    <fragment
        android:id="@+id/patientFragment"
        android:name="com.example.patientappv02.presentation.features.patients.PatientFragment"
        android:label="PatientFragment" >
        <action
            android:id="@+id/action_patientFragment_to_addPatientFragment"
            app:destination="@id/addPatientFragment" />
        <action
            android:id="@+id/action_patientFragment_to_detailsPatientFragment"
            app:destination="@id/detailsPatientFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPatientFragment"
        android:name="com.example.patientappv02.presentation.features.add.AddPatientFragment"
        android:label="AddPatientFragment" />
    <fragment
        android:id="@+id/detailsPatientFragment"
        android:name="com.example.patientappv02.presentation.features.details.DetailsPatientFragment"
        android:label="DetailsPatientFragment" />
</navigation>